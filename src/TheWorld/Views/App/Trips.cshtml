@{
    ViewBag.Title = "Home Page";
}

@section Scripts
{
    <script src="~/wwwroot/lib/underscore/underscore-min.js"></script>
    <script src="~/wwwroot/lib/angular/angular.min.js"></script>
    <script src="~/wwwroot/lib/angular-route/angular-route.min.js"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCuquf3eiIPW3ZPkgPQl8N17tH4NXp45aE&callback=initMap" type="text/javascript"></script>
    <script src="~/wwwroot/lib/gmaps/gmaps.min.js"></script>
    <script src="~/wwwroot/lib/travelmap/travelmap.min.js"></script>
    <environment names="Development">
        <script src="~/js/simpleControls.js"></script>
        <script src="~/js/app-trips.js"></script>
        <script src="~/js/tripsController.js"></script>
        <script src="~/js/tripEditorController.js"></script>
    </environment>

    <environment names="Production,Staging">
        <script src="~/wwwroot/lib/_app/simpleControls.js"></script>
        <script src="~/wwwroot/lib/_app/app-trips.js"></script>
        <script src="~/wwwroot/lib/_app/tripsController.js"></script>
        <script src="~/wwwroot/lib/_app/tripEditorController.js"></script>
    </environment>

}
<div class="row" ng-app="app-trips">

    <div ng-view class="col-md-12"></div>

</div>
